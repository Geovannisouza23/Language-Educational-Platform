# Production Environment
NODE_ENV=production
APP_ENV=production

# Database (Managed PostgreSQL recommended - AWS RDS, Google Cloud SQL, etc.)
DATABASE_HOST=your-production-db-host.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_USER=langplatform
DATABASE_PASSWORD=${DB_PASSWORD}

# Redis (Managed Redis - AWS ElastiCache, Redis Cloud, etc.)
REDIS_HOST=your-production-redis.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}

# JWT (Generate with: openssl rand -hex 64)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# SendGrid (Production)
SENDGRID_API_KEY=${SENDGRID_API_KEY}
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Language Learning Platform

# AWS S3 (Production Storage)
AWS_S3_BUCKET=language-platform-prod-uploads
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}
CDN_URL=https://cdn.yourdomain.com
CDN_ENABLED=true

# Zoom (Production)
ZOOM_API_KEY=${ZOOM_API_KEY}
ZOOM_API_SECRET=${ZOOM_API_SECRET}
VIDEO_PROVIDER=zoom

# Domains
PRIMARY_DOMAIN=yourdomain.com
API_DOMAIN=api.yourdomain.com
CDN_DOMAIN=cdn.yourdomain.com

# SSL
SSL_ENABLED=true
SSL_REDIRECT_HTTP=true

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=production
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting (Production values)
RATE_LIMIT_GENERAL=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_UPLOAD=5

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5

# Backup
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=language-platform-prod-backups
